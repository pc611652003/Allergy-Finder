<aside>
  <h2>FILTER BY: PRODUCT <br />& <br />ALLERGEN</h2>
  {{#if loggedIn}}
  <form class="form search-form">
    <div class="form-group">
      <label for="product-search">Search Products
        <br />
        🛒 🥣 🍋 🥩 🛒</label>
      <input class="form-input" type="text" id="product-search" />
    </div>
    <br />
    <div class="form-group">
      <label for="filter-search">Allergens
        <br />
        🐟 🥛 🍞 🍤 🥚 🥜</label>              
      <p id="filter-message">None</p>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" id="filter-sav-btn" type="click">Save Filter</button>
      <button class="btn btn-primary" id="search-btn" type="click">Search</button>
    </div>
    <div class="form-group">
      <p id="errorMessage-search"></p>
    </div>
  </form>
  <div>
    {{#each allergens as |allergen|}}
    {{> allergen-details}}
    {{/each}}
  </div>
  {{else}}
  <p></p>
  {{/if}}
</aside>

<div class="suggestions">
  <div class="row justify-space-between-md">

    <div class="login-card">

      <h2 class="page-title">Signup</h2>
      <form class="form signup-form">
        <div class="form-group">
          <label for="username-signup">Username:</label>
          <input class="form-input" type="text" id="username-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">signup</button>
        </div>
        <div class="form-group">
          <p id="errorMessage-signup"></p>
        </div>
      </form>

      <h2 class="page-title">Login</h2>
      <form class="form login-form">
        <div class="form-group">
          <label for="username-login">Username:</label>
          <input class="form-input" type="text" id="username-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">login</button>
        </div>
        <div class="form-group">
          <p id="errorMessage-login"></p>
        </div>
      </form>

    </div>
    
  </div>
</div>

<script src="./js/login.js"></script>